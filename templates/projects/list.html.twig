{# templates/projects/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}TechBoard - Projets{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Gestion des projets</h2>
    <a href="projects.php?action=add" class="btn btn-primary">Nouveau projet</a>
</div>

{% if success %}
<div class="alert alert-success alert-dismissible fade show" role="alert" id="success-alert">
    {{ success }}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<script>
    setTimeout(function() {
        var alert = document.getElementById('success-alert');
        if (alert) {
            alert.classList.remove('show');
            setTimeout(function() {
                if (alert.parentNode) {
                    alert.parentNode.removeChild(alert);
                }
            }, 150);
        }
    }, 3000);
</script>
{% endif %}

<div class="row mb-3">
    <div class="col-md-3">
        <select class="form-select" id="filter-progress">
            <option value="">Tous les projets</option>
            <option value="0">Non commencés (0%)</option>
            <option value="1-49">En cours (1-49%)</option>
            <option value="50-99">Avancés (50-99%)</option>
            <option value="100">Terminés (100%)</option>
        </select>
    </div>
    <div class="col-md-3">
        <input type="text" class="form-control" id="search-projects" placeholder="Rechercher...">
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Objectif</th>
                <th scope="col">Avancement</th>
                <th scope="col">Échéance</th>
            </tr>
        </thead>
        <tbody id="projects-table-body">
            {% for project in projects %}
            <tr class="project-row clickable-row"
                data-progress="{{ project.progress_percent }}"
                data-name="{{ project.name|lower }}"
                data-manager="{{ project.manager_name|lower|default('') }}"
                onclick="window.location='projects.php?action=view&id={{ project.id }}'">
                <td>
                    <strong>{{ project.name }}</strong>
                    {% if project.context %}
                        <div class="text-muted small mt-1">{{ project.context|slice(0, 60) ~ (project.context|length > 60 ? '...' : '') }}</div>
                    {% endif %}
                </td>
                <td>
                    {% if project.objective %}
                        {{ project.objective|slice(0, 60) ~ (project.objective|length > 60 ? '...' : '') }}
                    {% else %}
                        —
                    {% endif %}
                </td>
                <td>
                    <div class="progress" style="height: 6px; width: 80px;">
                        <div class="progress-bar
                            {% if project.progress_percent < 30 %}bg-danger
                            {% elseif project.progress_percent < 70 %}bg-warning
                            {% else %}bg-success{% endif %}"
                            role="progressbar"
                            style="width: {{ project.progress_percent }}%">
                        </div>
                    </div>
                    <small class="text-muted">{{ project.progress_percent }}%</small>
                </td>
                <td>
                    {% if project.estimated_end_date %}
                        {{ project.estimated_end_date|date('d/m/Y') }}
                        {% if project.estimated_end_date < 'now'|date('Y-m-d') and project.progress_percent < 100 %}
                            <i class="fas fa-exclamation-circle text-danger ms-1" title="En retard"></i>
                        {% endif %}
                    {% else %}
                        —
                    {% endif %}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4" class="text-center text-muted">Aucun projet trouvé</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<style>
.clickable-row {
    cursor: pointer;
}
.clickable-row:hover {
    background-color: rgba(0,0,0,.075);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Filtrage
    const progressFilter = document.getElementById('filter-progress');
    const searchInput = document.getElementById('search-projects');
    const projectRows = document.querySelectorAll('.project-row');

    function filterProjects() {
        const progressValue = progressFilter.value;
        const searchValue = searchInput.value.toLowerCase();

        projectRows.forEach(row => {
            let progressMatch = true;
            const progress = parseInt(row.dataset.progress);

            if (progressValue === '0' && progress !== 0) progressMatch = false;
            else if (progressValue === '1-49' && (progress < 1 || progress > 49)) progressMatch = false;
            else if (progressValue === '50-99' && (progress < 50 || progress > 99)) progressMatch = false;
            else if (progressValue === '100' && progress !== 100) progressMatch = false;

            const nameMatch = !searchValue ||
                row.dataset.name.includes(searchValue) ||
                row.dataset.manager.includes(searchValue);

            row.style.display = (progressMatch && nameMatch) ? '' : 'none';
        });
    }

    progressFilter.addEventListener('change', filterProjects);
    searchInput.addEventListener('input', filterProjects);
});
</script>
{% endblock %}