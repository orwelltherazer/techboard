{# templates/directory/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}TechBoard - Annuaire{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Annuaire</h2>
    <div>
        <a href="directory.php?action=add" class="btn btn-primary">Nouveau contact</a>
        {% if show_archived %}
        <a href="directory.php" class="btn btn-outline-secondary ms-1">Contacts actifs</a>
        {% else %}
        <a href="directory.php?archived=1" class="btn btn-outline-secondary ms-1">Archivés</a>
        {% endif %}
    </div>
</div>

{% if success %}
<div class="alert alert-success alert-dismissible fade show" role="alert" id="success-alert">
    {{ success }}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<script>
    setTimeout(function() {
        var alert = document.getElementById('success-alert');
        if (alert) {
            alert.classList.remove('show');
            setTimeout(function() {
                if (alert.parentNode) {
                    alert.parentNode.removeChild(alert);
                }
            }, 150);
        }
    }, 3000);
</script>
{% endif %}

<div class="row mb-3">
    <div class="col-md-3">
        <select class="form-select" id="filter-type">
            <option value="">Tous les types</option>
            <option value="internal_staff">Collaborateur interne</option>
            <option value="vendor">Fournisseur</option>
            <option value="contractor">Prestataire</option>
            <option value="public_service">Service public</option>
        </select>
    </div>
    <div class="col-md-3">
        <input type="text" class="form-control" id="search-contacts" placeholder="Rechercher...">
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Société</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Email</th>
                <th scope="col" class="text-center" style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody id="contacts-table-body">
            {% for contact in contacts %}
            <tr class="contact-row clickable-row"
                data-type="{{ contact.contact_type }}"
                data-name="{{ contact.name|lower }}"
                data-company="{{ contact.company|lower|default('') }}">
                <td>
                    <div>
                        <strong>{{ contact.name }}&nbsp;{{ contact.firstname }}</strong>
                        </div>
                    <div class="contact-details mt-2 d-none">
                        <div class="row small">
                            <div class="col-md-3"><strong>Type:</strong>
                                {% if contact.contact_type == 'internal_staff' %}Collaborateur interne
                                {% elseif contact.contact_type == 'vendor' %}Fournisseur
                                {% elseif contact.contact_type == 'contractor' %}Prestataire
                                {% elseif contact.contact_type == 'public_service' %}Service public
                                {% endif %}
                            </div>
                            <div class="col-md-3"><strong>Fonction:</strong> {{ contact.position|default('—') }}</div>
                            <div class="col-md-3"><strong>Domaine:</strong> {{ contact.expertise_area|default('—') }}</div>
                        </div>
                        {% if contact.notes %}
                        <div class="row small mt-1">
                            <div class="col-md-12"><strong>Notes:</strong> {{ contact.notes }}</div>
                        </div>
                        {% endif %}
                    </div>
                </td>
                <td>{{ contact.company|default('—') }}</td>
                <td>
                    {% if contact.phone %}
                    <a href="tel:{{ contact.phone }}" class="text-decoration-none text-primary">
                        <i class="fas fa-phone me-1"></i>{{ contact.phone }}
                    </a>
                    {% else %}
                        —
                    {% endif %}
                </td>
                <td>
                    {% if contact.email %}
                    <a href="mailto:{{ contact.email }}" class="text-decoration-none text-primary">
                        <i class="fas fa-envelope me-1"></i>{{ contact.email }}
                    </a>
                    {% else %}
                        —
                    {% endif %}
                </td>
                <td class="text-center align-middle">
                    <a href="directory.php?action=edit&id={{ contact.id }}" class="btn btn-sm btn-outline-primary border-0">
                        <i class="fas fa-edit"></i>
                    </a>
                    {% if show_archived %}
                    <button class="btn btn-sm btn-outline-success border-0 unarchive-btn"
                            data-id="{{ contact.id }}"
                            title="Désarchiver">
                        <i class="fas fa-undo"></i>
                    </button>
                    {% else %}
                    <button class="btn btn-sm btn-outline-warning border-0 action-btn"
                            data-id="{{ contact.id }}"
                            data-action="archive"
                            data-title="{{ contact.name }}"
                            title="Archiver">
                        <i class="fas fa-archive"></i>
                    </button>
                    {% endif %}
                    <button class="btn btn-sm btn-outline-danger border-0 action-btn"
                            data-id="{{ contact.id }}"
                            data-action="delete"
                            data-title="{{ contact.name }}"
                            title="Supprimer">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="text-center text-muted">
                    {% if show_archived %}
                        Aucun contact archivé
                    {% else %}
                        Aucun contact trouvé
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{# Modal de confirmation #}
<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalTitle">Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="confirmModalBody">
                <!-- Message de confirmation -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="confirmModalAction">Confirmer</button>
            </div>
        </div>
    </div>
</div>

<style>
.clickable-row {
    cursor: pointer;
}
.clickable-row:hover {
    background-color: rgba(0,0,0,.075);
}
.btn-outline-primary.border-0,
.btn-outline-warning.border-0,
.btn-outline-success.border-0,
.btn-outline-danger.border-0 {
    border: none !important;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
    // Toggle détails contact au clic sur la ligne
    document.querySelectorAll('.clickable-row').forEach(row => {
        row.addEventListener('click', function (e) {
            // Ne pas déplier si on clique sur un bouton
            if (e.target.closest('.btn')) {
                return;
            }

            const details = this.querySelector('.contact-details');
            details.classList.toggle('d-none');
        });
    });

    // Filtrage
    const typeFilter = document.getElementById('filter-type');
    const searchInput = document.getElementById('search-contacts');
    const contactRows = document.querySelectorAll('.contact-row');

    function filterContacts() {
        const typeValue = typeFilter.value;
        const searchValue = searchInput.value.toLowerCase();

        contactRows.forEach(row => {
            const typeMatch = !typeValue || row.dataset.type === typeValue;
            const nameMatch = !searchValue ||
                row.dataset.name.includes(searchValue) ||
                row.dataset.company.includes(searchValue);

            row.style.display = (typeMatch && nameMatch) ? '' : 'none';
        });
    }

    typeFilter.addEventListener('change', filterContacts);
    searchInput.addEventListener('input', filterContacts);

    // Modal de confirmation
    const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
    const confirmModalTitle = document.getElementById('confirmModalTitle');
    const confirmModalBody = document.getElementById('confirmModalBody');
    const confirmModalAction = document.getElementById('confirmModalAction');
    let pendingAction = null;
    let pendingId = null;

    // Gestion des actions avec confirmation
    document.querySelectorAll('.action-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const action = this.dataset.action;
            const id = this.dataset.id;
            const title = this.dataset.title;

            pendingAction = action;
            pendingId = id;

            if (action === 'archive') {
                confirmModalTitle.textContent = 'Archiver le contact';
                confirmModalBody.innerHTML = `Êtes-vous sûr de vouloir archiver le contact <strong>"${title}"</strong> ?`;
                confirmModalAction.className = 'btn btn-warning';
                confirmModalAction.innerHTML = '<i class="fas fa-archive"></i> Archiver';
            } else if (action === 'delete') {
                confirmModalTitle.textContent = 'Supprimer le contact';
                confirmModalBody.innerHTML = `Êtes-vous sûr de vouloir supprimer définitivement le contact <strong>"${title}"</strong> ?<br><span class="text-danger small">Cette action est irréversible.</span>`;
                confirmModalAction.className = 'btn btn-danger';
                confirmModalAction.innerHTML = '<i class="fas fa-trash-alt"></i> Supprimer';
            }

            confirmModal.show();
        });
    });

    // Confirmation de l'action
    confirmModalAction.addEventListener('click', function() {
        if (pendingAction && pendingId) {
            sendAction(pendingAction, pendingId);
            confirmModal.hide();
        }
    });

    // Désarchiver sans confirmation
    document.querySelectorAll('.unarchive-btn').forEach(btn => {
        btn.addEventListener('click', () => sendAction('unarchive', btn.dataset.id));
    });
});

// Fonction pour envoyer l'action
function sendAction(action, id) {
    fetch(`directory.php?action=${action}&id=${id}`, {
        method: 'POST'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Erreur lors de l\'opération');
        }
    })
    .catch(error => {
        alert('Erreur de connexion');
    });
}
</script>
{% endblock %}