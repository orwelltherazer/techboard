{# templates/resources/form.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}TechBoard - {{ is_edit ? 'Modifier' : 'Nouvelle' }} ressource{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>{{ is_edit ? 'Modifier la ressource' : 'Nouvelle ressource' }}</h2>
    <a href="resources.php" class="btn btn-outline-secondary">← Retour</a>
</div>

{% if error %}
<div class="alert alert-danger">{{ error }}</div>
{% endif %}

<form method="POST" class="row g-3">
    <div class="col-md-6">
        <label for="name" class="form-label">Nom *</label>
        <input type="text" class="form-control" id="name" name="name" value="{{ resource.name ?? '' }}" required>
    </div>
    
    <div class="col-md-6">
        <label for="resource_type" class="form-label">Type</label>
        <select class="form-select" id="resource_type" name="resource_type">
            <option value="hardware" {% if (resource.resource_type ?? 'other') == 'hardware' %}selected{% endif %}>Matériel</option>
            <option value="software" {% if (resource.resource_type ?? '') == 'software' %}selected{% endif %}>Logiciel</option>
            <option value="human" {% if (resource.resource_type ?? '') == 'human' %}selected{% endif %}>Humain</option>
            <option value="service" {% if (resource.resource_type ?? '') == 'service' %}selected{% endif %}>Service</option>
        </select>
    </div>
    
    <div class="col-md-6">
        <label for="vendor_id" class="form-label">Fournisseur / Contact associé</label>
        <select class="form-select" id="vendor_id" name="vendor_id">
            <option value="">Aucun fournisseur</option>
            {% for contact in contacts %}
            <option value="{{ contact.id }}" {% if contact.id == (resource.vendor_id ?? null) %}selected{% endif %}>
                {{ contact.name }}{% if contact.company %} ({{ contact.company }}){% endif %}
            </option>
            {% endfor %}
        </select>
    </div>
    
    <div class="col-md-6">
        <label for="location" class="form-label">Localisation</label>
        <input type="text" class="form-control" id="location" name="location" value="{{ resource.location ?? '' }}">
    </div>
    
    <div class="col-md-12">
        <label for="usage_description" class="form-label">Description d'usage</label>
        <textarea class="form-control" id="usage_description" name="usage_description" rows="2">{{ resource.usage_description ?? '' }}</textarea>
    </div>
    
    <div class="col-md-12">
        <label for="documentation_url" class="form-label">Lien vers documentation</label>
        <input type="url" class="form-control" id="documentation_url" name="documentation_url" value="{{ resource.documentation_url ?? '' }}">
    </div>
    
    {% if is_edit %}
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="archived" name="archived" {% if resource.archived ?? false %}checked{% endif %}>
            <label class="form-check-label" for="archived">
                Archiver cette ressource (elle disparaîtra de la liste principale)
            </label>
        </div>
    </div>
    {% endif %}
    
    <div class="col-12">
        <button type="submit" class="btn btn-primary">{{ is_edit ? 'Mettre à jour' : 'Ajouter la ressource' }}</button>
    </div>
</form>
{% endblock %}