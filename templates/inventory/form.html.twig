{# templates/inventory/form.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}TechBoard - {{ is_edit ? 'Modifier' : 'Nouvel' }} équipement{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">{{ is_edit ? 'Modifier l\'équipement' : 'Nouvel équipement' }}</h2>
    <a href="inventory.php" class="btn btn-sm btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Retour
    </a>
</div>

{% if error %}
<div class="alert alert-danger">{{ error }}</div>
{% endif %}

<div class="card border-0 shadow-sm" style="background-color: #fafafa;">
    <div class="card-body p-3">
        <form method="POST">
            <div class="row g-2">
                <div class="col-md-6">
                    <label for="label" class="form-label small fw-bold">Désignation *</label>
                    <input type="text" class="form-control form-control-sm" id="label" name="label" value="{{ item.label ?? '' }}" required>
                </div>

                <div class="col-md-6">
                    <label for="category" class="form-label small fw-bold">Catégorie</label>
                    <select class="form-select form-select-sm" id="category" name="category">
                        <option value="workstation" {% if (item.category ?? 'other') == 'workstation' %}selected{% endif %}>Poste de travail</option>
                        <option value="server" {% if (item.category ?? '') == 'server' %}selected{% endif %}>Serveur</option>
                        <option value="printer" {% if (item.category ?? '') == 'printer' %}selected{% endif %}>Imprimante</option>
                        <option value="network_rack" {% if (item.category ?? '') == 'network_rack' %}selected{% endif %}>Baie réseau</option>
                        <option value="camera" {% if (item.category ?? '') == 'camera' %}selected{% endif %}>Caméra</option>
                        <option value="badge_reader" {% if (item.category ?? '') == 'badge_reader' %}selected{% endif %}>Badgeuse</option>
                        <option value="phone" {% if (item.category ?? '') == 'phone' %}selected{% endif %}>Téléphone</option>
                        <option value="other" {% if (item.category ?? 'other') == 'other' %}selected{% endif %}>Autre</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="model" class="form-label small fw-bold">Modèle</label>
                    <input type="text" class="form-control form-control-sm" id="model" name="model" value="{{ item.model ?? '' }}">
                </div>

                <div class="col-md-6">
                    <label for="serial_number" class="form-label small fw-bold">Numéro de série</label>
                    <input type="text" class="form-control form-control-sm" id="serial_number" name="serial_number" value="{{ item.serial_number ?? '' }}">
                </div>

                <div class="col-md-6">
                    <label for="location" class="form-label small fw-bold">Localisation</label>
                    <input type="text" class="form-control form-control-sm" id="location" name="location" value="{{ item.location ?? '' }}">
                </div>

                <div class="col-md-6">
                    <label for="status" class="form-label small fw-bold">Statut</label>
                    <select class="form-select form-select-sm" id="status" name="status">
                        <option value="active" {% if (item.status ?? 'active') == 'active' %}selected{% endif %}>En service</option>
                        <option value="broken" {% if (item.status ?? '') == 'broken' %}selected{% endif %}>En panne</option>
                        <option value="decommissioned" {% if (item.status ?? '') == 'decommissioned' %}selected{% endif %}>Réformé</option>
                        <option value="in_stock" {% if (item.status ?? '') == 'in_stock' %}selected{% endif %}>En stock</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="installation_date" class="form-label small fw-bold">Date d'installation</label>
                    <input type="date" class="form-control form-control-sm" id="installation_date" name="installation_date" value="{{ item.installation_date ?? '' }}">
                </div>

                <div class="col-md-6">
                    <label for="last_status_update" class="form-label small fw-bold">Dernière mise à jour du statut</label>
                    <input type="date" class="form-control form-control-sm" id="last_status_update" name="last_status_update" value="{{ item.last_status_update ?? '' }}">
                </div>

                <div class="col-md-6">
                    <label for="technician_id" class="form-label small fw-bold">Responsable / Contact technique</label>
                    <select class="form-select form-select-sm" id="technician_id" name="technician_id">
                        <option value="">Non assigné</option>
                        {% for contact in contacts %}
                        <option value="{{ contact.id }}" {% if contact.id == (item.technician_id ?? null) %}selected{% endif %}>
                            {{ contact.name }}{% if contact.company %} ({{ contact.company }}){% endif %}
                        </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="col-md-12">
                    <label for="notes" class="form-label small fw-bold">Notes / Historique</label>
                    <textarea class="form-control form-control-sm" id="notes" name="notes" rows="2">{{ item.notes ?? '' }}</textarea>
                </div>
            </div>

            <div class="mt-3 pt-2 border-top border-light text-end">
                <a href="inventory.php" class="btn btn-sm btn-outline-secondary">Annuler</a>
                <button type="submit" class="btn btn-success btn-sm px-3 ms-1">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
