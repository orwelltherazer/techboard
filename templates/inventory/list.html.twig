{# templates/inventory/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}TechBoard - Inventaire{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Inventaire</h2>
    <div>
        <a href="inventory.php?action=add" class="btn btn-primary">Nouvel équipement</a>
        {% if show_archived %}
        <a href="inventory.php" class="btn btn-outline-secondary ms-1">Équipements actifs</a>
        {% else %}
        <a href="inventory.php?archived=1" class="btn btn-outline-secondary ms-1">Archivés</a>
        {% endif %}
    </div>
</div>

{% if success %}
<div class="alert alert-success alert-dismissible fade show" role="alert" id="success-alert">
    {{ success }}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<script>
    setTimeout(function() {
        var alert = document.getElementById('success-alert');
        if (alert) {
            alert.classList.remove('show');
            setTimeout(function() {
                if (alert.parentNode) {
                    alert.parentNode.removeChild(alert);
                }
            }, 150);
        }
    }, 3000);
</script>
{% endif %}

<div class="row mb-3">
    <div class="col-md-3">
        <select class="form-select" id="filter-category">
            <option value="">Toutes les catégories</option>
            <option value="workstation">Poste de travail</option>
            <option value="server">Serveur</option>
            <option value="printer">Imprimante</option>
            <option value="network_rack">Baie réseau</option>
            <option value="camera">Caméra</option>
            <option value="badge_reader">Badgeuse</option>
            <option value="phone">Téléphone</option>
            <option value="other">Autre</option>
        </select>
    </div>
    <div class="col-md-3">
        <select class="form-select" id="filter-status">
            <option value="">Tous les statuts</option>
            <option value="active">En service</option>
            <option value="broken">En panne</option>
            <option value="decommissioned">Réformé</option>
            <option value="in_stock">En stock</option>
        </select>
    </div>
    <div class="col-md-3">
        <input type="text" class="form-control" id="search-inventory" placeholder="Rechercher...">
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">Désignation</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Statut</th>
                <th scope="col">Localisation</th>
                <th scope="col" class="text-center" style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody id="inventory-table-body">
            {% for item in items %}
            <tr class="inventory-row clickable-row"
                data-category="{{ item.category }}"
                data-status="{{ item.status }}"
                data-label="{{ item.label|lower }}"
                data-model="{{ (item.model ~ ' ' ~ item.serial_number)|lower }}">
                <td>
                    <div>
                        <strong>{{ item.label }}</strong>
                        {% if item.model or item.serial_number %}
                            <div class="text-muted small mt-1">
                                {{ item.model|default('') }}{% if item.serial_number %} (SN: {{ item.serial_number }}){% endif %}
                            </div>
                        {% endif %}
                    </div>
                    <div class="item-details mt-2 d-none">
                        <div class="row small">
                            <div class="col-md-3"><strong>Technicien :</strong> {{ item.technician_name|default('Non assigné') }}</div>
                            <div class="col-md-3"><strong>Installé le :</strong> {{ item.installation_date ? item.installation_date|date('d/m/Y') : '—' }}</div>
                            <div class="col-md-3"><strong>Dernière MAJ :</strong> {{ item.last_status_update ? item.last_status_update|date('d/m/Y') : '—' }}</div>
                            {% if item.notes %}
                            <div class="col-md-12 mt-2"><strong>Notes :</strong> {{ item.notes }}</div>
                            {% endif %}
                        </div>
                    </div>
                </td>
                <td>
                    {% if item.category == 'workstation' %}Poste de travail
                    {% elseif item.category == 'server' %}Serveur
                    {% elseif item.category == 'printer' %}Imprimante
                    {% elseif item.category == 'network_rack' %}Baie réseau
                    {% elseif item.category == 'camera' %}Caméra
                    {% elseif item.category == 'badge_reader' %}Badgeuse
                    {% elseif item.category == 'phone' %}Téléphone
                    {% else %}Autre{% endif %}
                </td>
                <td>
                    <span class="badge fw-bold
                        {% if item.status == 'active' %}bg-success
                        {% elseif item.status == 'broken' %}bg-danger
                        {% elseif item.status == 'decommissioned' %}bg-secondary
                        {% else %}bg-warning text-dark{% endif %}">
                        {% if item.status == 'active' %}En service
                        {% elseif item.status == 'broken' %}En panne
                        {% elseif item.status == 'decommissioned' %}Réformé
                        {% else %}En stock{% endif %}
                    </span>
                </td>
                <td>{{ item.location|default('—') }}</td>
                <td class="text-center align-middle">
                    <a href="inventory.php?action=edit&id={{ item.id }}" class="btn btn-sm btn-outline-primary border-0">
                        <i class="fas fa-edit"></i>
                    </a>
                    {% if show_archived %}
                    <button class="btn btn-sm btn-outline-success border-0 unarchive-btn"
                            data-id="{{ item.id }}"
                            title="Désarchiver">
                        <i class="fas fa-undo"></i>
                    </button>
                    {% else %}
                    <button class="btn btn-sm btn-outline-warning border-0 action-btn"
                            data-id="{{ item.id }}"
                            data-action="archive"
                            data-title="{{ item.label }}"
                            title="Archiver">
                        <i class="fas fa-archive"></i>
                    </button>
                    {% endif %}
                    <button class="btn btn-sm btn-outline-danger border-0 action-btn"
                            data-id="{{ item.id }}"
                            data-action="delete"
                            data-title="{{ item.label }}"
                            title="Supprimer">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="text-center text-muted">
                    {% if show_archived %}
                        Aucun équipement archivé
                    {% else %}
                        Aucun équipement trouvé
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{# Modal de confirmation #}
<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalTitle">Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="confirmModalBody">
                <!-- Message de confirmation -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="confirmModalAction">Confirmer</button>
            </div>
        </div>
    </div>
</div>

<style>
.clickable-row {
    cursor: pointer;
}
.clickable-row:hover {
    background-color: rgba(0,0,0,.075);
}
.btn-outline-primary.border-0,
.btn-outline-warning.border-0,
.btn-outline-success.border-0,
.btn-outline-danger.border-0 {
    border: none !important;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
    // Toggle détails équipement au clic sur la ligne
    document.querySelectorAll('.clickable-row').forEach(row => {
        row.addEventListener('click', function (e) {
            // Ne pas déplier si on clique sur un bouton
            if (e.target.closest('.btn')) {
                return;
            }

            const details = this.querySelector('.item-details');
            details.classList.toggle('d-none');
        });
    });

    // Filtrage
    const categoryFilter = document.getElementById('filter-category');
    const statusFilter = document.getElementById('filter-status');
    const searchInput = document.getElementById('search-inventory');
    const inventoryRows = document.querySelectorAll('.inventory-row');

    function filterInventory() {
        const categoryValue = categoryFilter.value;
        const statusValue = statusFilter.value;
        const searchValue = searchInput.value.toLowerCase();

        inventoryRows.forEach(row => {
            const categoryMatch = !categoryValue || row.dataset.category === categoryValue;
            const statusMatch = !statusValue || row.dataset.status === statusValue;
            const searchMatch = !searchValue ||
                row.dataset.label.includes(searchValue) ||
                row.dataset.model.includes(searchValue);

            row.style.display = (categoryMatch && statusMatch && searchMatch) ? '' : 'none';
        });
    }

    categoryFilter.addEventListener('change', filterInventory);
    statusFilter.addEventListener('change', filterInventory);
    searchInput.addEventListener('input', filterInventory);

    // Modal de confirmation
    const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
    const confirmModalTitle = document.getElementById('confirmModalTitle');
    const confirmModalBody = document.getElementById('confirmModalBody');
    const confirmModalAction = document.getElementById('confirmModalAction');
    let pendingAction = null;
    let pendingId = null;

    // Gestion des actions avec confirmation
    document.querySelectorAll('.action-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const action = this.dataset.action;
            const id = this.dataset.id;
            const title = this.dataset.title;

            pendingAction = action;
            pendingId = id;

            if (action === 'archive') {
                confirmModalTitle.textContent = 'Archiver l\'équipement';
                confirmModalBody.innerHTML = `Êtes-vous sûr de vouloir archiver l'équipement <strong>"${title}"</strong> ?`;
                confirmModalAction.className = 'btn btn-warning';
                confirmModalAction.innerHTML = '<i class="fas fa-archive"></i> Archiver';
            } else if (action === 'delete') {
                confirmModalTitle.textContent = 'Supprimer l\'équipement';
                confirmModalBody.innerHTML = `Êtes-vous sûr de vouloir supprimer définitivement l'équipement <strong>"${title}"</strong> ?<br><span class="text-danger small">Cette action est irréversible.</span>`;
                confirmModalAction.className = 'btn btn-danger';
                confirmModalAction.innerHTML = '<i class="fas fa-trash-alt"></i> Supprimer';
            }

            confirmModal.show();
        });
    });

    // Confirmation de l'action
    confirmModalAction.addEventListener('click', function() {
        if (pendingAction && pendingId) {
            sendAction(pendingAction, pendingId);
            confirmModal.hide();
        }
    });

    // Désarchiver sans confirmation
    document.querySelectorAll('.unarchive-btn').forEach(btn => {
        btn.addEventListener('click', () => sendAction('unarchive', btn.dataset.id));
    });
});

// Fonction pour envoyer l'action
function sendAction(action, id) {
    fetch(`inventory.php?action=${action}&id=${id}`, {
        method: 'POST'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Erreur lors de l\'opération');
        }
    })
    .catch(error => {
        alert('Erreur de connexion');
    });
}
</script>
{% endblock %}
