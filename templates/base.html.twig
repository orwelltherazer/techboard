{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}TechBoard{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/techboard/css/styles.css?v=3">
</head>
<body>
    <div class="sidebar">
        <div class="text-left mb-4 px-4">
            <h5 class="fw-bold"><img src="images/cpu_white.svg" alt="Logo" class="me-2 img-fluid" style="height: 1.5rem;">TechBoard</h5>
        </div>
        <a href="index.php" class="{{ active_page == 'dashboard' ? 'active' : '' }}"><i class="fas fa-home"></i> <span>Dashboard</span></a>
        <a href="tasks.php" class="{{ active_page == 'tasks' ? 'active' : '' }}"><i class="fas fa-tasks"></i> <span>Tâches</span></a>
        <a href="recurring_tasks.php" class="{{ active_page == 'recurring_tasks' ? 'active' : '' }}"><i class="fas fa-tasks"></i> <span>Tâches récurrentes</span></a>
        <a href="projects.php" class="{{ active_page == 'projects' ? 'active' : '' }}"><i class="fas fa-project-diagram"></i> <span>Projets</span></a>
        <!--<a href="resources.php" class="{{ active_page == 'resources' ? 'active' : '' }}"><i class="fas fa-boxes"></i> <span>Ressources</span></a> -->
        <a href="communications.php" class="{{ active_page == 'communications' ? 'active' : '' }}"><i class="fas fa-bullhorn"></i> <span>Communication</span></a>
        <a href="inventory.php" class="{{ active_page == 'inventory' ? 'active' : '' }}"><i class="fas fa-laptop"></i> <span>Inventaire</span></a>
        <a href="directory.php" class="{{ active_page == 'directory' ? 'active' : '' }}"><i class="fas fa-address-book"></i> <span>Annuaire</span></a>
        <a href="processes.php" class="{{ active_page == 'processes' ? 'active' : '' }}"><i class="fas fa-clipboard-list"></i> <span>Processus</span></a>
        <a href="notes.php" class="{{ active_page == 'notes' ? 'active' : '' }}"><i class="fas fa-sticky-note"></i> <span>Notes</span></a>
        <a href="contracts.php" class="{{ active_page == 'contracts' ? 'active' : '' }}"><i class="fas fa-file-contract"></i> <span>Contrats</span></a>
        <a href="orders.php" class="{{ active_page == 'orders' ? 'active' : '' }}"><i class="fas fa-shopping-cart"></i> <span>Commandes</span></a>
    </div>
    <div class="main-content">
        {% block content %}{% endblock %}
    </div>
</body>
</html>