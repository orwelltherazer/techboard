{# templates/admin/contract_form.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}TechBoard - {{ is_edit ? 'Modifier' : 'Nouveau' }} contrat{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>{{ is_edit ? 'Modifier le contrat' : 'Nouveau contrat' }}</h2>
    <a href="administration.php?section=contracts" class="btn btn-outline-secondary">← Retour</a>
</div>

{% if error %}
<div class="alert alert-danger">{{ error }}</div>
{% endif %}

<form method="POST" class="row g-3">
    <div class="col-md-6">
        <label for="name" class="form-label fw-bold">Nom du contrat *</label>
        <input type="text" class="form-control" id="name" name="name" value="{{ contract.name ?? '' }}" required>
    </div>
    
    <div class="col-md-6">
        <label for="vendor_id" class="form-label fw-bold">Fournisseur *</label>
        <select class="form-select" id="vendor_id" name="vendor_id" required>
            <option value="">Sélectionnez un fournisseur</option>
            {% for contact in contacts %}
            <option value="{{ contact.id }}" {% if contact.id == (contract.vendor_id ?? null) %}selected{% endif %}>
                {{ contact.name }}{% if contact.company %} ({{ contact.company }}){% endif %}
            </option>
            {% endfor %}
        </select>
    </div>
    
    <div class="col-md-6">
        <label for="contract_type" class="form-label fw-bold">Type de contrat</label>
        <select class="form-select" id="contract_type" name="contract_type">
            <option value="maintenance" {% if (contract.contract_type ?? 'maintenance') == 'maintenance' %}selected{% endif %}>Maintenance</option>
            <option value="licence" {% if (contract.contract_type ?? '') == 'licence' %}selected{% endif %}>Licence</option>
            <option value="hebergement" {% if (contract.contract_type ?? '') == 'hebergement' %}selected{% endif %}>Hébergement</option>
            <option value="service" {% if (contract.contract_type ?? '') == 'service' %}selected{% endif %}>Service</option>
            <option value="autre" {% if (contract.contract_type ?? '') == 'autre' %}selected{% endif %}>Autre</option>
        </select>
    </div>
    
    <div class="col-md-6">
        <label for="start_date" class="form-label fw-bold">Date de début</label>
        <input type="date" class="form-control" id="start_date" name="start_date" value="{{ contract.start_date ?? '' }}">
    </div>
    
    <div class="col-md-6">
        <label for="end_date" class="form-label fw-bold">Date de fin</label>
        <input type="date" class="form-control" id="end_date" name="end_date" value="{{ contract.end_date ?? '' }}">
    </div>
    
    <div class="col-md-6">
        <label for="annual_amount" class="form-label fw-bold">Montant annuel (€)</label>
        <input type="number" class="form-control" id="annual_amount" name="annual_amount" step="0.01" value="{{ contract.annual_amount ?? '' }}">
    </div>
    
    <div class="col-md-6">
        <label for="auto_renew" class="form-label fw-bold">Renouvellement automatique</label>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="auto_renew" name="auto_renew" {% if contract.auto_renew ?? false %}checked{% endif %}>
            <label class="form-check-label" for="auto_renew">
                Activer le renouvellement automatique
            </label>
        </div>
    </div>
    
    <div class="col-12">
        <label for="notes" class="form-label fw-bold">Notes / Remarques</label>
        <textarea class="form-control" id="notes" name="notes" rows="3">{{ contract.notes ?? '' }}</textarea>
    </div>
    
    {% if is_edit %}
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="archived" name="archived" {% if contract.archived ?? false %}checked{% endif %}>
            <label class="form-check-label" for="archived">
                Archiver ce contrat (il disparaîtra de la liste principale)
            </label>
        </div>
    </div>
    {% endif %}
    
    <div class="col-12">
        <button type="submit" class="btn btn-primary">{{ is_edit ? 'Mettre à jour' : 'Créer le contrat' }}</button>
    </div>
</form>
{% endblock %}