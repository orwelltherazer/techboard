{# templates/tasks/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}TechBoard - Tâches{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Gestion des tâches</h2>
    <div>
        <a href="tasks.php?action=add" class="btn btn-primary">Nouvelle tâche</a>
        {% if show_archived %}
        <a href="tasks.php" class="btn btn-outline-secondary ms-1">Tâches actives</a>
        {% else %}
        <a href="tasks.php?archived=1" class="btn btn-outline-secondary ms-1">Archivées</a>
        {% endif %}
    </div>
</div>

{% if success %}
<div class="alert alert-success alert-dismissible fade show" role="alert" id="success-alert">
    {{ success }}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<script>
    setTimeout(function() {
        var alert = document.getElementById('success-alert');
        if (alert) {
            alert.classList.remove('show');
            setTimeout(function() {
                if (alert.parentNode) {
                    alert.parentNode.removeChild(alert);
                }
            }, 150);
        }
    }, 3000);
</script>
{% endif %}

<div class="row mb-3">
    <div class="col-md-3">
        <select class="form-select" id="filter-status">
            <option value="">Tous les statuts</option>
            <option value="not_started">À faire</option>
            <option value="in_progress">En cours</option>
            <option value="completed">Terminée</option>
        </select>
    </div>
    <div class="col-md-3">
        <input type="text" class="form-control" id="search-tasks" placeholder="Rechercher...">
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Statut</th>
                <th scope="col">Avancement</th>
                <th scope="col">Échéance</th>
                <th scope="col" class="text-center" style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody id="tasks-table-body">
            {% for task in tasks %}
            <tr class="task-row clickable-row"
                data-status="{{ task.status }}"
                data-title="{{ task.title|lower }}"
                data-project="{{ task.project_name|lower|default('') }}"
                data-assignee="{{ task.assignee_name|lower|default('') }}"
                onclick="window.location='tasks.php?action=view&id={{ task.id }}'"
                style="cursor: pointer;">
                <td>
                    <div>
                        <strong>{{ task.title }}</strong>
                        {% if task.description %}
                            <div class="text-muted small mt-1">{{ task.description|slice(0, 60) ~ (task.description|length > 60 ? '...' : '') }}</div>
                        {% endif %}
                    </div>
                </td>
                <td>
                    <span class="badge fw-bold
                        {% if task.status == 'not_started' %}bg-secondary
                        {% elseif task.status == 'in_progress' %}bg-warning text-dark
                        {% else %}bg-success{% endif %}">
                        {% if task.status == 'not_started' %}À faire
                        {% elseif task.status == 'in_progress' %}En cours
                        {% else %}Fini{% endif %}
                    </span>
                </td>
                <td class="text-center align-middle">
                    <div class="progress" style="height: 6px; width: 80px;">
                        <div class="progress-bar
                            {% if task.progress_percent < 30 %}bg-danger
                            {% elseif task.progress_percent < 70 %}bg-warning
                            {% else %}bg-success{% endif %}"
                            role="progressbar"
                            style="width: {{ task.progress_percent }}%">
                        </div>
                    </div>
                    <small class="text-muted">{{ task.progress_percent }}%</small>
                </td>
                <td class="text-center align-middle">
                    {% if task.due_date %}
                        {{ task.due_date|date('d/m/Y') }}
                        {% if task.due_date < 'now'|date('Y-m-d') and task.status != 'completed' %}
                            <i class="fas fa-exclamation-circle text-danger ms-1" title="En retard"></i>
                        {% endif %}
                    {% else %}
                        —
                    {% endif %}
                </td>
                <td class="text-center align-middle" onclick="event.stopPropagation();">
                    <a href="tasks.php?action=edit&id={{ task.id }}" class="btn btn-sm btn-outline-primary border-0">
                        <i class="fas fa-edit"></i>
                    </a>
                    {% if show_archived %}
                    <button class="btn btn-sm btn-outline-success border-0 unarchive-btn" 
                            data-id="{{ task.id }}"
                            title="Désarchiver">
                        <i class="fas fa-undo"></i>
                    </button>
                    {% else %}
                    <button class="btn btn-sm btn-outline-warning border-0 action-btn" 
                            data-id="{{ task.id }}"
                            data-action="archive"
                            data-title="{{ task.title }}"
                            title="Archiver">
                        <i class="fas fa-archive"></i>
                    </button>
                    {% endif %}
                    <button class="btn btn-sm btn-outline-danger border-0 action-btn" 
                            data-id="{{ task.id }}"
                            data-action="delete"
                            data-title="{{ task.title }}"
                            title="Supprimer">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="text-center text-muted">
                    {% if show_archived %}
                        Aucune tâche archivée
                    {% else %}
                        Aucune tâche trouvée
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{# Modal de confirmation #}
<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalTitle">Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="confirmModalBody">
                <!-- Message de confirmation -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="confirmModalAction">Confirmer</button>
            </div>
        </div>
    </div>
</div>

<style>
.clickable-row {
    cursor: pointer;
}
.clickable-row:hover {
    background-color: rgba(0,0,0,.075);
}
.btn-outline-primary.border-0,
.btn-outline-warning.border-0,
.btn-outline-success.border-0,
.btn-outline-danger.border-0 {
    border: none !important;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
    // Filtrage
    const statusFilter = document.getElementById('filter-status');
    const searchInput = document.getElementById('search-tasks');
    const taskRows = document.querySelectorAll('.task-row');

    function filterTasks() {
        const statusValue = statusFilter.value;
        const searchValue = searchInput.value.toLowerCase();

        taskRows.forEach(row => {
            const statusMatch = !statusValue || row.dataset.status === statusValue;
            const titleMatch = !searchValue ||
                row.dataset.title.includes(searchValue) ||
                row.dataset.project.includes(searchValue) ||
                row.dataset.assignee.includes(searchValue);

            row.style.display = (statusMatch && titleMatch) ? '' : 'none';
        });
    }

    statusFilter.addEventListener('change', filterTasks);
    searchInput.addEventListener('input', filterTasks);

    // Modal de confirmation
    const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
    const confirmModalTitle = document.getElementById('confirmModalTitle');
    const confirmModalBody = document.getElementById('confirmModalBody');
    const confirmModalAction = document.getElementById('confirmModalAction');
    let pendingAction = null;
    let pendingId = null;

    // Gestion des actions avec confirmation
    document.querySelectorAll('.action-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const action = this.dataset.action;
            const id = this.dataset.id;
            const title = this.dataset.title;
            
            pendingAction = action;
            pendingId = id;
            
            if (action === 'archive') {
                confirmModalTitle.textContent = 'Archiver la tâche';
                confirmModalBody.innerHTML = `Êtes-vous sûr de vouloir archiver la tâche <strong>"${title}"</strong> ?`;
                confirmModalAction.className = 'btn btn-warning';
                confirmModalAction.innerHTML = '<i class="fas fa-archive"></i> Archiver';
            } else if (action === 'delete') {
                confirmModalTitle.textContent = 'Supprimer la tâche';
                confirmModalBody.innerHTML = `Êtes-vous sûr de vouloir supprimer définitivement la tâche <strong>"${title}"</strong> ?<br><span class="text-danger small">Cette action est irréversible.</span>`;
                confirmModalAction.className = 'btn btn-danger';
                confirmModalAction.innerHTML = '<i class="fas fa-trash-alt"></i> Supprimer';
            }
            
            confirmModal.show();
        });
    });

    // Confirmation de l'action
    confirmModalAction.addEventListener('click', function() {
        if (pendingAction && pendingId) {
            sendAction(pendingAction, pendingId);
            confirmModal.hide();
        }
    });

    // Désarchiver sans confirmation
    document.querySelectorAll('.unarchive-btn').forEach(btn => {
        btn.addEventListener('click', () => sendAction('unarchive', btn.dataset.id));
    });
});

// Fonction pour envoyer l'action
function sendAction(action, id) {
    fetch(`tasks.php?action=${action}&id=${id}`, {
        method: 'POST'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Erreur lors de l\'opération');
        }
    })
    .catch(error => {
        alert('Erreur de connexion');
    });
}
</script>
{% endblock %}