{# templates/recurring_tasks/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}TechBoard - Tâches récurrentes{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Tâches récurrentes</h2>
    <div>
        <a href="recurring_tasks.php?action=add" class="btn btn-primary">Nouvelle tâche</a>
        {% if show_archived %}
        <a href="recurring_tasks.php" class="btn btn-outline-secondary ms-1">Tâches actives</a>
        {% else %}
        <a href="recurring_tasks.php?archived=1" class="btn btn-outline-secondary ms-1">Archivées</a>
        {% endif %}
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-3">
        <select class="form-select" id="filter-category">
            <option value="">Toutes les catégories</option>
            <option value="it">Informatique</option>
            <option value="maintenance">Maintenance</option>
            <option value="communication">Communication</option>
            <option value="security">Sécurité</option>
            <option value="network">Réseau</option>
            <option value="other">Autre</option>
        </select>
    </div>
    <div class="col-md-3">
        <select class="form-select" id="filter-pattern">
            <option value="">Toutes les récurrences</option>
            <option value="daily">Quotidien</option>
            <option value="weekly">Hebdomadaire</option>
            <option value="monthly">Mensuel</option>
            <option value="yearly">Annuel</option>
        </select>
    </div>
    <div class="col-md-3">
        <input type="text" class="form-control" id="search-tasks" placeholder="Rechercher...">
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Récurrence</th>
                <th scope="col" class="text-center" style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody id="tasks-table-body">
            {% for task in tasks %}
            <tr class="task-row clickable-row"
                data-category="{{ task.category }}"
                data-pattern="{{ task.recurrence_pattern }}"
                data-title="{{ task.title|lower }}"
                data-description="{{ task.description|lower|default('') }}">
                <td>
                    <div>
                        <strong>{{ task.title }}</strong>
                        {% if task.description %}
                            <div class="text-muted small mt-1">{{ task.description|slice(0, 80) ~ (task.description|length > 80 ? '...' : '') }}</div>
                        {% endif %}
                    </div>
                    <div class="task-details mt-2 d-none">
                        <div class="row small">
                            <div class="col-md-12">
                                <strong>Description complète :</strong>
                                <div class="mt-1">{{ task.description|default('—')|nl2br }}</div>
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                    <span class="badge fw-bold
                        {% if task.category == 'it' %}bg-primary
                        {% elseif task.category == 'maintenance' %}bg-warning text-dark
                        {% elseif task.category == 'communication' %}bg-info
                        {% elseif task.category == 'security' %}bg-danger
                        {% elseif task.category == 'network' %}bg-success
                        {% else %}bg-secondary{% endif %}">
                        {% if task.category == 'it' %}Informatique
                        {% elseif task.category == 'maintenance' %}Maintenance
                        {% elseif task.category == 'communication' %}Communication
                        {% elseif task.category == 'security' %}Sécurité
                        {% elseif task.category == 'network' %}Réseau
                        {% else %}Autre{% endif %}
                    </span>
                </td>
                <td>
                    <div>
                        <strong>
                            {% if task.recurrence_pattern == 'daily' %}Quotidien
                            {% elseif task.recurrence_pattern == 'weekly' %}Hebdomadaire
                            {% elseif task.recurrence_pattern == 'monthly' %}Mensuel
                            {% else %}Annuel{% endif %}
                        </strong>
                        {% if task.recurrence_interval > 1 %}
                            <span class="text-muted small">
                                (tous les {{ task.recurrence_interval }}
                                {% if task.recurrence_pattern == 'daily' %}jours
                                {% elseif task.recurrence_pattern == 'weekly' %}semaines
                                {% elseif task.recurrence_pattern == 'monthly' %}mois
                                {% else %}ans{% endif %})
                            </span>
                        {% endif %}
                    </div>
                    {% if task.recurrence_pattern == 'weekly' and task.due_day_of_week %}
                        {% set days = ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi', 'Dimanche'] %}
                        <div class="text-muted small">→ {{ days[task.due_day_of_week - 1] }}</div>
                    {% elseif task.recurrence_pattern == 'monthly' and task.due_day_of_month %}
                        <div class="text-muted small">→ Le {{ task.due_day_of_month }} du mois</div>
                    {% endif %}
                </td>
                <td class="text-center align-middle">
                    <a href="recurring_tasks.php?action=edit&id={{ task.id }}" class="btn btn-sm btn-outline-primary border-0">
                        <i class="fas fa-edit"></i>
                    </a>
                    {% if show_archived %}
                    <button class="btn btn-sm btn-outline-success border-0 unarchive-btn" 
                            data-id="{{ task.id }}"
                            title="Désarchiver">
                        <i class="fas fa-undo"></i>
                    </button>
                    {% else %}
                    <button class="btn btn-sm btn-outline-warning border-0 action-btn" 
                            data-id="{{ task.id }}"
                            data-action="archive"
                            data-title="{{ task.title }}"
                            title="Archiver">
                        <i class="fas fa-archive"></i>
                    </button>
                    {% endif %}
                    <button class="btn btn-sm btn-outline-danger border-0 action-btn" 
                            data-id="{{ task.id }}"
                            data-action="delete"
                            data-title="{{ task.title }}"
                            title="Supprimer">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4" class="text-center text-muted">
                    {% if show_archived %}
                        Aucune tâche archivée
                    {% else %}
                        Aucune tâche récurrente trouvée
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{# Modal de confirmation #}
<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalTitle">Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="confirmModalBody">
                <!-- Message de confirmation -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="confirmModalAction">Confirmer</button>
            </div>
        </div>
    </div>
</div>

<style>
.clickable-row {
    cursor: pointer;
}
.clickable-row:hover {
    background-color: rgba(0,0,0,.075);
}
.btn-outline-primary.border-0,
.btn-outline-warning.border-0,
.btn-outline-success.border-0,
.btn-outline-danger.border-0 {
    border: none !important;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
    // Toggle détails tâche au clic sur la ligne
    document.querySelectorAll('.clickable-row').forEach(row => {
        row.addEventListener('click', function (e) {
            // Ne pas déplier si on clique sur un bouton
            if (e.target.closest('.btn')) {
                return;
            }
            
            const details = this.querySelector('.task-details');
            if (details) {
                details.classList.toggle('d-none');
            }
        });
    });

    // Filtrage
    const categoryFilter = document.getElementById('filter-category');
    const patternFilter = document.getElementById('filter-pattern');
    const searchInput = document.getElementById('search-tasks');
    const taskRows = document.querySelectorAll('.task-row');

    function filterTasks() {
        const categoryValue = categoryFilter.value;
        const patternValue = patternFilter.value;
        const searchValue = searchInput.value.toLowerCase();

        taskRows.forEach(row => {
            const categoryMatch = !categoryValue || row.dataset.category === categoryValue;
            const patternMatch = !patternValue || row.dataset.pattern === patternValue;
            const searchMatch = !searchValue ||
                row.dataset.title.includes(searchValue) ||
                row.dataset.description.includes(searchValue);

            row.style.display = (categoryMatch && patternMatch && searchMatch) ? '' : 'none';
        });
    }

    categoryFilter.addEventListener('change', filterTasks);
    patternFilter.addEventListener('change', filterTasks);
    searchInput.addEventListener('input', filterTasks);

    // Modal de confirmation
    const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
    const confirmModalTitle = document.getElementById('confirmModalTitle');
    const confirmModalBody = document.getElementById('confirmModalBody');
    const confirmModalAction = document.getElementById('confirmModalAction');
    let pendingAction = null;
    let pendingId = null;

    // Gestion des actions avec confirmation
    document.querySelectorAll('.action-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const action = this.dataset.action;
            const id = this.dataset.id;
            const title = this.dataset.title;
            
            pendingAction = action;
            pendingId = id;
            
            if (action === 'archive') {
                confirmModalTitle.textContent = 'Archiver la tâche';
                confirmModalBody.innerHTML = `Êtes-vous sûr de vouloir archiver la tâche <strong>"${title}"</strong> ?`;
                confirmModalAction.className = 'btn btn-warning';
                confirmModalAction.innerHTML = '<i class="fas fa-archive"></i> Archiver';
            } else if (action === 'delete') {
                confirmModalTitle.textContent = 'Supprimer la tâche';
                confirmModalBody.innerHTML = `Êtes-vous sûr de vouloir supprimer définitivement la tâche <strong>"${title}"</strong> ?<br><span class="text-danger small">Cette action est irréversible.</span>`;
                confirmModalAction.className = 'btn btn-danger';
                confirmModalAction.innerHTML = '<i class="fas fa-trash-alt"></i> Supprimer';
            }
            
            confirmModal.show();
        });
    });

    // Confirmation de l'action
    confirmModalAction.addEventListener('click', function() {
        if (pendingAction && pendingId) {
            sendAction(pendingAction, pendingId);
            confirmModal.hide();
        }
    });

    // Désarchiver sans confirmation
    document.querySelectorAll('.unarchive-btn').forEach(btn => {
        btn.addEventListener('click', () => sendAction('unarchive', btn.dataset.id));
    });
});

// Fonction pour envoyer l'action
function sendAction(action, id) {
    fetch(`recurring_tasks.php?action=${action}&id=${id}`, {
        method: 'POST'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Erreur lors de l\'opération');
        }
    })
    .catch(error => {
        alert('Erreur de connexion');
    });
}
</script>
{% endblock %}