{# templates/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="container-fluid">
    {# En-tête #}
<div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Tableau de bord</h2>
        <div class="text-muted small">
            <i class="far fa-calendar me-2"></i>{{ "now"|date('d/m/Y') }}
        </div>
    </div>

    {# Cartes statistiques #}
    <div class="row g-3 mb-4">
        {% set stats = [
            { value: not_started_tasks, label: 'Tâches', status: 'À faire', badge: 'bg-secondary text-light', icon: 'fa-clock', color: 'secondary', bg: 'bg-danger bg-opacity-10 bg-gradient', link: 'tasks.php' },
            { value: in_progress_tasks, label: 'Tâches', status: 'En cours', badge: 'bg-warning text-dark', icon: 'fa-tasks', color: 'info', bg: 'bg-info bg-opacity-10 bg-gradient', link: 'tasks.php' },
            { value: pending_comms, label: 'Communications', status: 'A traiter', badge: 'bg-secondary text-light', icon: 'fa-bullhorn', color: 'primary', bg: 'bg-warning bg-opacity-10 bg-gradient', link: 'communications.php' },
            { value: ordered_orders|length, label: 'Commandes', status: 'Commandé', badge: 'bg-primary', icon: 'fa-shopping-cart', color: 'success', bg: 'bg-success bg-opacity-10 bg-gradient', link: 'administration.php?section=orders' }
        ] %}

        {% for stat in stats %}
        <div class="col-xl-3 col-md-6">
            <a href="{{ stat.link }}" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 {{ stat.bg }} rounded-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="text-muted small mb-1 fw-bold">{{ stat.label }}</div>
                                <h2 class="mb-1 fw-bold">{{ stat.value }}</h2>
                                <span class="badge fw-bold {{ stat.badge }} mt-1">{{ stat.status }}</span>
                            </div>
                            <div class="rounded-circle bg-white p-3 d-flex align-items-center justify-content-center" style="box-shadow: 0 2px 6px rgba(0,0,0,0.08);">
                                <i class="fas {{ stat.icon }} text-{{ stat.color }} fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>

    {# Sections de contenu #}
    <div class="row g-3">
        {# Projets récents #}
        <div class="col-xl-4 col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-opacity-10 border-bottom pt-3 pb-2">
                    <h6 class="mb-0 fw-semibold">
                        <i class="fas fa-project-diagram text-primary me-2"></i>Projets en cours
                    </h6>
                </div>
                <div class="card-body pt-1 px-1">
                    {% if recent_projects|length > 0 %}
                        <div class="bg-light bg-opacity-25 rounded-2 p-3">
                            {% for project in recent_projects %}
                            <a href="projects.php?action=edit&id={{ project.id }}" class="text-decoration-none">
                                <div class="mb-3 {% if not loop.last %}pb-3 border-bottom  border-light-custom{% endif %}">
                                    <h6 class="fw-bold text-dark mb-1">{{ project.name }}</h6>
                                    <small class="text-muted fw-light text-xs lh-sm">{{ project.objective }}</small>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="progress flex-grow-1" role="progressbar" aria-valuenow="{{ project.progress_percent }}" aria-valuemin="0" aria-valuemax="100" style="height: 6px;">
                                            <div class="progress-bar bg-primary" style="width: {{ project.progress_percent }}%;"></div>
                                        </div>
                                        <span class="badge bg-primary rounded-pill flex-shrink-0">{{ project.progress_percent }}%</span>
                                    </div>
                                </div>
                            </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-folder-open text-muted opacity-25 mb-2" style="font-size: 2.5rem;"></i>
                            <p class="text-muted small mb-0">Aucun projet en cours</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Dernières tâches #}
        <div class="col-xl-4 col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-opacity-10 border-bottom pt-3 pb-2">
                    <h6 class="mb-0 fw-semibold">
                        <i class="fas fa-list-check text-info me-2"></i>Dernières tâches
                    </h6>
                </div>
                <div class="card-body pt-1 px-1">
                    {% if recent_tasks|length > 0 %}
                        <div class="bg-light bg-opacity-25 rounded-2 p-3">
                            {% for task in recent_tasks %}
                            <a href="tasks.php?action=edit&id={{ task.id }}" class="text-decoration-none">
                                <div class="mb-3 {% if not loop.last %}pb-3 border-bottom  border-light-custom{% endif %}">
                                    <div class="d-flex justify-content-between align-items-start mb-1">
                                        <strong class="text-dark">{{ task.title }}</strong>
                                        <span class="badge fw-bold ms-2
                                            {% if task.status == 'not_started' %}bg-secondary text-light
                                            {% elseif task.status == 'in_progress' %}bg-warning text-dark
                                            {% else %}bg-success text-light{% endif %}">
                                            {% if task.status == 'not_started' %}À faire
                                            {% elseif task.status == 'in_progress' %}En cours
                                            {% else %}Fait{% endif %}
                                        </span>
                                    </div>
                                    <small class="text-muted">{{ task.created_at|date('d/m/Y') }}</small>
                                </div>
                            </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-tasks text-muted opacity-25 mb-2" style="font-size: 2.5rem;"></i>
                            <p class="text-muted small mb-0">Aucune tâche récente</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Commandes en attente #}
        <div class="col-xl-4 col-lg-12">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-opacity-10 border-bottom pt-3 pb-2">
                    <h6 class="mb-0 fw-semibold">
                        <i class="fas fa-shopping-cart text-success me-2"></i>Commandes en attente
                    </h6>
                </div>
                <div class="card-body pt-1 px-1">
                    {% if ordered_orders|length > 0 %}
                        <div class="bg-light bg-opacity-25 rounded-2 p-1">
                            {% for order in ordered_orders %}
                            <a href="administration.php?action=order_edit&id={{ order.id }}" class="text-decoration-none">
                                <div class="mb-3 {% if not loop.last %}pb-2 border-bottom  border-light-custom{% endif %}">
                                    {% if order.description %}
                                        <div class="text-black small mb-1">{{ order.description }}</div>
                                    {% endif %}
                                    <div class="text-muted small text-end">
                                        <i class="fas fa-building me-1"></i>{{ vendors[order.vendor_id] ?? 'Fournisseur inconnu' }}
                                    </div>
                                </div>
                            </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-shopping-basket text-muted opacity-25 mb-2" style="font-size: 2.5rem;"></i>
                            <p class="text-muted small mb-0">Aucune commande en attente</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border: 1px solid rgba(0,0,0,0.03);
}
.card:hover {
}
.badge {
    font-weight: 500;
    font-size: 0.75rem;
    padding: 0.35em 0.65em;
}
.progress {
    border-radius: 2px;
}
.text-muted {
    opacity: 0.85;
}
.border-light-custom {
  border-color: #dee2e6 !important;
}
/* Effet highlight sur les éléments des listes */
.bg-light.bg-opacity-25 .mb-3 {
    transition: background-color 0.2s ease, transform 0.15s ease;
    border-radius: 0.3rem;
    padding: 0.4rem 0.5rem;
}

.bg-light.bg-opacity-25 .mb-3:hover {
    background-color: rgba(124, 126, 128, 0.08); /* bleu clair, léger highlight */
    transform: translateY(-1px);
}
.text-xs {
  font-size: 0.8rem;
}
.line-height-md {
  line-height: 0.9; /* Interligne */
}
</style>
{% endblock %}
